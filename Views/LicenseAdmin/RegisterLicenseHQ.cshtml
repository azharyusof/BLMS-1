@model BLMS.Models.License.LicenseAdmin

@{
    ViewData["Title"] = "Edit License";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="mt-md-4 pt-md-2 mb-5 pb-5">
    <!-- Grid row -->
    <div class="row">

        <!-- Grid column -->
        <div class="col-md-12">
            <div class="card card-cascade cascading-admin-card user-card">
                <!-- Card Data -->
                <div class="admin-up d-flex justify-content-start">
                    <i class="fas fa fa-chart-line info-color py-4 mr-3 z-depth-2"></i>
                    <div class="data">
                        <h5 class="font-weight-bold dark-grey-text">
                            Edit License
                        </h5>
                    </div>
                </div>
                <!-- Card Data -->
                <!-- Card content -->
                <div class="card-body card-body-cascade">
                    <!-- Grid row -->
                    <div class="row">
                        <div class="col-lg-12">
                            <form asp-action="RegisterLicenseHQ" autocomplete="off" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <!-- Grid column -->
                                    <div class="col-md-12">
                                        <div id="alert" class="form-group">
                                            @Html.Raw(@ViewBag.Alert)
                                        </div>
                                    </div>
                                    <!-- Grid column -->
                                </div>

                                <div class="list-group list-group-flush">
                                    <div class="container">
                                        <span class="font-weight-bold dark-grey-text" style="font-size: 16px; color:blue;">
                                            <i class="fas fa fa-clipboard-list"> License Details</i>
                                        </span>

                                        <div class="list-group-item col-md-12">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="md-form form-sm mb-0" hidden>
                                                        <input asp-for="LicenseID" class="form-control">
                                                        <label asp-for="LicenseID" class="control-label"><span style="color:red;">*</span> License ID</label>
                                                        <span asp-validation-for="LicenseID" class="text-danger text-sm"></span>
                                                    </div>

                                                    <div class="md-form form-sm mb-0" hidden>
                                                        <input asp-for="OldLicenseName" class="form-control">
                                                        <label asp-for="OldLicenseName" class="control-label"><span style="color:red;">*</span> Old License ID</label>
                                                        <span asp-validation-for="OldLicenseName" class="text-danger text-sm"></span>
                                                    </div>

                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="LicenseName" class="form-control" placeholder="Type New License Name" style="font-size: 12px;">
                                                        <label asp-for="LicenseName" class="control-label"><span style="color:red;">*</span> License Name</label>
                                                        <span asp-validation-for="LicenseName" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="RegistrationNo" class="form-control" placeholder="Type New Registration No" style="font-size: 12px;">
                                                        <label asp-for="RegistrationNo" class="control-label"><span style="color:red;">*</span> Registration No</label>
                                                        <span asp-validation-for="RegistrationNo" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="SerialNo" class="form-control" placeholder="Type New Serial No" style="font-size: 12px;">
                                                        <label asp-for="SerialNo" class="control-label"><span style="color:red;">*</span> Serial No</label>
                                                        <span asp-validation-for="SerialNo" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="md-form form-sm mb-0">
                                                        <select asp-for="CategoryID"
                                                                class="mdb-select md-form colorful-select dropdown-primary"
                                                                asp-items="@(new SelectList(@ViewBag.ListofCategory,"CategoryID", "CategoryName"))">
                                                        </select>
                                                        <label asp-for="CategoryName" class="mdb-main-label" for="RoleID"><span style="color:red;">*</span> License Type</label>
                                                        <span asp-validation-for="CategoryName" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="md-form form-sm mb-0">
                                                        <select id="ddlDivName" asp-for="DivID"
                                                                class="mdb-select md-form colorful-select dropdown-primary"
                                                                asp-items="@(new SelectList(@ViewBag.ListofBusinessDiv,"DivID", "DivName"))">
                                                        </select>
                                                        <label asp-for="DivName" class="mdb-main-label" for="RoleID"><span style="color:red;">*</span> Business Division</label>
                                                        <span asp-validation-for="DivName" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="md-form form-sm mb-0">
                                                        <select id="ddlUnitName" asp-for="UnitID"
                                                                class="mdb-select md-form colorful-select dropdown-primary"
                                                                asp-items="@(new SelectList(@ViewBag.ListofBusinessUnit,"UnitID", "UnitName"))">
                                                        </select>
                                                        <label asp-for="UnitName" class="mdb-main-label" for="RoleID"><span style="color:red;">*</span> Business Unit</label>
                                                        <span asp-validation-for="UnitName" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="md-form input-group form-sm mb-0">
                                                        <input asp-for="IssuedDT" placeholder="Please select Issue Date" type="text" class="form-control IssuedDT" style="font-size: 12px;">
                                                        <div class="input-group-append md-addon">
                                                            <span class="input-group-text" style="font-size: 12px;"><i class="fa fa-calendar"></i></span>
                                                        </div>
                                                        <label asp-for="IssuedDT" class="mdb-main-label">Issued Date</label>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="md-form input-group form-sm mb-0">
                                                        <input asp-for="ExpiredDT" placeholder="Please select Expire Date" type="text" class="form-control ExpiredDT" style="font-size: 12px;">
                                                        <div class="input-group-append md-addon">
                                                            <span class="input-group-text" style="font-size: 12px;"><i class="fa fa-calendar"></i></span>
                                                        </div>
                                                        <label asp-for="ExpiredDT" class="mdb-main-label">Expired Date</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br />

                                <div class="list-group list-group-flush">
                                    <div class="container">
                                        <span class="font-weight-bold dark-grey-text" style="font-size: 16px; color:blue;">
                                            <i class="fas fa fa-users"> Person in Charge</i>
                                        </span>

                                        <div class="list-group-item col-md-12">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="PIC1Name" class="form-control" value="@User.Identity.Name" onkeydown="return false" style="font-size: 12px;">
                                                        <label asp-for="PIC1Name" class="control-label"><span style="color:red;">*</span> PIC 1 Name</label>
                                                        <span asp-validation-for="PIC1Name" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-4">
                                                    <div class="md-form form-sm mb-0">
                                                        <select asp-for="PIC2StaffNo"
                                                                class="mdb-select md-form colorful-select dropdown-primary"
                                                                asp-items="@(new SelectList(@ViewBag.ListofPIC2,"PIC2StaffNo", "PIC2Name"))">
                                                        </select>
                                                        <label asp-for="PIC2Name" class="mdb-main-label" for="RoleID">PIC 2 Name (Optional)</label>
                                                        <span asp-validation-for="PIC2Name" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-4">
                                                    <div class="md-form form-sm mb-0">
                                                        <select asp-for="PIC3StaffNo"
                                                                class="mdb-select md-form colorful-select dropdown-primary"
                                                                asp-items="@(new SelectList(@ViewBag.ListofPIC3,"PIC3StaffNo", "PIC3Name"))">
                                                        </select>
                                                        <label asp-for="PIC3Name" class="mdb-main-label" for="RoleID">PIC 3 Name (Optional)</label>
                                                        <span asp-validation-for="PIC3Name" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br />

                                <div class="list-group list-group-flush">
                                    <div class="container">
                                        <span class="font-weight-bold dark-grey-text" style="font-size: 16px;">
                                            <i class="fas fa fa-file-alt"> File Attachment</i>
                                        </span>

                                        <div class="list-group-item col-md-12">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group form-sm mb-0" action="#">
                                                        <label class="control-label text-sm" style="font-size: 12px;"><span style="color:red;">*</span> License File</label>
                                                        <div class="custom-file mb-3">
                                                            <input type="file" class="custom-file-input" name="LicenseFile" style="font-size: 12px;">
                                                            <label class="custom-file-label" for="customFile" style="font-size: 12px;">Choose license file</label>
                                                            <span asp-validation-for="LicenseName" class="text-danger text-sm"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br />

                                <div class="list-group list-group-flush">
                                    <div class="container">
                                        <span class="font-weight-bold dark-grey-text">
                                            <i class="fas fa fa-info-circle"> Remarks</i>
                                        </span>

                                        <div class="list-group-item col-md-12">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="md-form form-sm mb-0">
                                                        <textarea asp-for="Remarks" rows="5" class="md-textarea form-control" placeholder="Type Remarks" style="font-size: 12px;"></textarea>
                                                        <label asp-for="Remarks" class="control-label">Remarks</label>
                                                        <span asp-validation-for="Remarks" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br />

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input type="submit" value="Register" asp-action="RegisterLicenseHQ" class="btn btn-outline-primary waves-effect" style="font-size: 12px;" />
                                            <a asp-action="Index" class="btn btn-outline-success waves-effect" style="font-size: 12px;">Back</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section CSS{
    <style>
        .select-wrapper input.select-dropdown {
            font-size: 12px;
        }

        .dropdown-content li > span {
            font-size: 12px;
        }
    </style>

    <script src="~/mdb/js/mdb.js"></script>
}

@section Scripts {

    <script>
        $(document).ready(function () {
            $('.mdb-select').materialSelect();
        });
    </script>

    <script type="text/javascript">
        $('.IssuedDT').pickadate({
            format: "dd/mm/yyyy"
        });

        $('.ExpiredDT').pickadate({
            format: "dd/mm/yyyy"
        });
    </script>

    <script>
        $(function () {
            $("#ddlDivName").change(function () {
                $.getJSON('@Url.Content("~/LicenseAdmin/JSONGetUnitName")', { DivID: $("#ddlDivName").val() }, function (d) {
                    var row = "";
                    $("#ddlUnitName").empty();
                    items = "<option value='0'>Please select Business Unit</option>";
                    $.each(d, function (i, item) {
                        items += "<option value=" + item.value + ">" + item.text + "</option>";
                    });
                    $("#ddlUnitName").html(items);
                })
            })
        })
    </script>

    <script>
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

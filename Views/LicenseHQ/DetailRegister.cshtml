@model BLMS.Models.License.LicenseHQ

@{
    ViewData["Title"] = "View HQ License";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="mt-md-4 pt-md-2 mb-5 pb-5" style="font-size:12px;">
    <!-- Grid row -->
    <div class="row">

        <!-- Grid column -->
        <div class="col-md-12">
            <div class="card card-cascade cascading-admin-card user-card">
                <!-- Card Data -->
                <div class="admin-up d-flex justify-content-start">
                    <i class="fas fa fa-industry info-color py-4 mr-3 z-depth-2"></i>
                    <div class="data">
                        <h5 class="font-weight-bold dark-grey-text">
                            View HQ License
                        </h5>
                    </div>
                </div>
                <!-- Card Data -->
                <!-- Card content -->
                <div class="card-body card-body-cascade">
                    <!-- Grid row -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header bg-success text-white">
                                    <strong><i class="far fa fa-window-close ml-1 text-black"></i> This license has been registered!</strong>
                                </div>
                            </div>

                            <ul class="stepper stepper-horizontal">
                                <li class="completed active">
                                    <a href="#!">
                                        <span class="circle"><i class="fas fa-check mt-0"></i></span>
                                        <span class="label">Requested</span>
                                    </a>
                                </li>

                                <li class="completed">
                                    <a href="#!">
                                        <span class="circle"><i class="fas fa-check mt-0"></i></span>
                                        <span class="label">Approved</span>
                                    </a>
                                </li>

                                <li class="completed">
                                    <a href="#!">
                                        <span class="circle"><i class="fas fa-check mt-0"></i></span>
                                        <span class="label">Registered</span>
                                    </a>
                                </li>
                            </ul>

                            <form asp-action="Create" autocomplete="off" method="post" enctype="multipart/form-data">
                                <div class="list-group list-group-flush">
                                    <div class="container">
                                        <span class="font-weight-bold dark-grey-text">
                                            <i class="fas fa fa-clipboard-list"> License Details</i>
                                        </span>

                                        <div class="list-group-item col-md-12">
                                            <div class="row">
                                                <div class="col-md-12" hidden>
                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="LicenseID" onkeyup="this.value=this.value.toUpperCase()" class="form-control" onkeydown="return false">
                                                        <label asp-for="LicenseID" class="control-label"><span style="color:red;">*</span> License Name</label>
                                                        <span asp-validation-for="LicenseID" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-12">
                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="LicenseName" onkeyup="this.value=this.value.toUpperCase()" class="form-control" onkeydown="return false" style="font-size:12px;">
                                                        <label asp-for="LicenseName" class="control-label"><span style="color:red;">*</span> License Name</label>
                                                        <span asp-validation-for="LicenseName" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="RegistrationNo" class="form-control" onkeydown="return false" style="font-size:12px;">
                                                        <label asp-for="RegistrationNo" class="control-label"><span style="color:red;">*</span> Registration No</label>
                                                        <span asp-validation-for="RegistrationNo" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="SerialNo" class="form-control" onkeydown="return false" style="font-size:12px;">
                                                        <label asp-for="SerialNo" class="control-label">Serial No</label>
                                                        <span asp-validation-for="SerialNo" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="CategoryName" class="form-control" onkeyup="this.value=this.value.toUpperCase()" onkeydown="return false" style="font-size:12px;">
                                                        <label asp-for="CategoryName" class="control-label">License Type</label>
                                                        <span asp-validation-for="CategoryName" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="DivName" class="form-control" onkeyup="this.value=this.value.toUpperCase()" onkeydown="return false" style="font-size:12px;">
                                                        <label asp-for="DivName" class="control-label">Business Division</label>
                                                        <span asp-validation-for="DivName" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="UnitName" class="form-control" onkeyup="this.value=this.value.toUpperCase()" onkeydown="return false" style="font-size:12px;">
                                                        <label asp-for="UnitName" class="control-label">Business Unit</label>
                                                        <span asp-validation-for="UnitName" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="md-form input-group form-sm mb-0">
                                                        <input asp-for="IssuedDT" type="text" class="form-control IssuedDT" onkeydown="return false" style="font-size:12px;">
                                                        <div class="input-group-append md-addon">
                                                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                                        </div>
                                                        <label asp-for="IssuedDT" class="mdb-main-label">Issued Date</label>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="md-form input-group form-sm mb-0">
                                                        <input asp-for="ExpiredDT" type="text" class="form-control ExpiredDT" onkeydown="return false" style="font-size:12px;">
                                                        <div class="input-group-append md-addon">
                                                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                                        </div>
                                                        <label asp-for="ExpiredDT" class="mdb-main-label">Expired Date</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br />

                                <div class="list-group list-group-flush">
                                    <div class="container">
                                        <span class="font-weight-bold dark-grey-text">
                                            <i class="fas fa fa-users"> Person in Charge</i>
                                        </span>

                                        <div class="list-group-item col-md-12">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="PIC1Name" class="form-control" onkeydown="return false" style="font-size:12px;">
                                                        <label asp-for="PIC1Name" class="control-label"><span style="color:red;">*</span> PIC 1 Name</label>
                                                        <span asp-validation-for="PIC1Name" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-4">
                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="PIC2Name" class="form-control" onkeydown="return false" style="font-size:12px;">
                                                        <label asp-for="PIC2Name" class="control-label">PIC 2 Name</label>
                                                        <span asp-validation-for="PIC2Name" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-4">
                                                    <div class="md-form form-sm mb-0">
                                                        <input asp-for="PIC3Name" class="form-control" onkeydown="return false" style="font-size:12px;">
                                                        <label asp-for="PIC3Name" class="control-label">PIC 3 Name</label>
                                                        <span asp-validation-for="PIC3Name" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br />

                                <div class="list-group list-group-flush">
                                    <div class="container">
                                        <span class="font-weight-bold dark-grey-text" style="font-size: 16px;">
                                            <i class="fas fa fa-file-alt"> File Attachment</i>
                                        </span>

                                        <div class="list-group-item col-md-12">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="input-group input-group-sm mb-3">
                                                        <input type="text" class="form-control" asp-for="LicenseFileName" style="font-size: 12px;">
                                                        <div class="input-group-prepend">
                                                            <a class="input-group-text" href="@Url.Action("DownloadLicenseFile", "LicenseHQ", new {id=Model.LicenseID})" style="font-size: 12px;">Download License File</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br />

                                <div class="list-group list-group-flush">
                                    <div class="container">
                                        <span class="font-weight-bold dark-grey-text">
                                            <i class="fas fa fa-info-circle"> Remarks</i>
                                        </span>

                                        <div class="list-group-item col-md-12">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="md-form form-sm mb-0">
                                                        <textarea asp-for="Remarks" rows="5" onkeyup="this.value=this.value.toUpperCase()" class="md-textarea form-control" onkeydown="return false" style="font-size:12px;"></textarea>
                                                        <label asp-for="Remarks" class="control-label">Remarks</label>
                                                        <span asp-validation-for="Remarks" class="text-danger text-sm"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br />

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <a asp-action="Index" class="btn btn-outline-success waves-effect">Back</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

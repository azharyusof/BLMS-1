@model BLMS.Models.SOP.Authority

@{
    ViewData["Title"] = "Create Authority Link";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="mt-md-4 pt-md-2 mb-5 pb-5">
    <!-- Grid row -->
    <div class="row">

        <!-- Grid column -->
        <div class="col-md-12">
            <div class="card card-cascade cascading-admin-card user-card">
                <!-- Card Data -->
                <div class="admin-up d-flex justify-content-start">
                    <i class="fas fa fa-link info-color py-4 mr-3 z-depth-2"></i>
                    <div class="data">
                        <h5 class="font-weight-bold dark-grey-text">
                            Create Authority Link
                        </h5>
                    </div>
                </div>
                <!-- Card Data -->
                <!-- Card content -->
                <div class="card-body card-body-cascade">
                    <!-- Grid row -->
                    <div class="row">
                        <div class="col-lg-12">
                            <form asp-action="Edit" autocomplete="off">
                                <div class="row">
                                    <!-- Grid column -->
                                    <div class="col-md-12">
                                        <div id="alert" class="form-group">
                                            @Html.Raw(@ViewBag.Alert)
                                        </div>
                                    </div>
                                    <!-- Grid column -->
                                </div>

                                <div class="row">
                                    <div class="col-md-12" hidden>
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="AuthorityID" class="form-control">
                                            <label asp-for="AuthorityID" class="control-label"><span style="color:red;">*</span> Authority ID</label>
                                            <span asp-validation-for="AuthorityID" class="text-danger text-sm"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12" hidden>
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="OldAuthorityName" class="form-control">
                                            <label asp-for="OldAuthorityName" class="control-label"><span style="color:red;">*</span> Old Authority Name</label>
                                            <span asp-validation-for="OldAuthorityName" class="text-danger text-sm"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12" hidden>
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="OldAuthorityLink" class="form-control">
                                            <label asp-for="OldAuthorityLink" class="control-label"><span style="color:red;">*</span> Old Authority Link</label>
                                            <span asp-validation-for="OldAuthorityLink" class="text-danger text-sm"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="AuthorityName" onkeyup="this.value=this.value.toUpperCase()" class="form-control" placeholder="Type New Authority Name">
                                            <label asp-for="AuthorityName" class="control-label"><span style="color:red;">*</span> Authority Name</label>
                                            <span asp-validation-for="AuthorityName" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <textarea asp-for="AuthorityLink" rows="3" class="md-textarea form-control" placeholder="Type New Authority Link"></textarea>
                                            <label asp-for="AuthorityLink" class="control-label"><span style="color:red;">*</span> Authority Link</label>
                                            <span asp-validation-for="AuthorityLink" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input type="submit" value="Edit" class="btn btn-outline-primary waves-effect" />
                                            <a asp-action="Index" class="btn btn-outline-success waves-effect">Back</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model BLMS.Models.SOP.Authority

@{
    ViewData["Title"] = "Authority Link";
    Layout = "~/Views/Shared/_SOPLayout.cshtml";
}

<div class="container-fluid mt-5 mt-md-0 mb-0">
    <div class="row" style="margin-top: -100px;">
        <div class="col-md-12 px-lg-5">
            <div class="card pb-5 mx-md-3">
                <div class="card-body">
                    <div class="container text-center my-5">
                        <h2 class="title font-weight-bold my-3 wow fadeIn" data-wow-delay="0.2s">
                            <strong>EDIT AUTHORITY LINK</strong>
                        </h2>

                        <p class="grey-text w-responsive mx-auto mb-3 wow fadeIn" data-wow-delay="0.2s">
                            Notes: Please change the entry to edit existing Authority Link.
                        </p>

                        <div class="row">
                            <div class="col-lg-12 wow fadeIn" data-wow-delay="0.2s">
                                <form asp-action="Edit" autocomplete="off">
                                    <div class="row">
                                        <div class="col-md-12 text-left">
                                            <div id="alert" class="form-group" style="font-size: 14px;">
                                                @Html.Raw(@ViewBag.Alert)
                                            </div>
                                        </div>
                                    </div>

                                    <input type="hidden" asp-for="AuthorityID" />
                                    <input type="hidden" asp-for="OldAuthorityLink" />
                                    <input type="hidden" asp-for="OldAuthorityName" />

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <div class="md-form form-sm">
                                                    <input asp-for="AuthorityName" class="form-control" placeholder="Please type Authority Name" style="font-size: 13px;">
                                                    <label asp-for="AuthorityName" class="control-label font-weight-bold" style="font-size: 18px;"><span style="color:red;">*</span> Authority Name</label>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="md-form form-sm">
                                                    <textarea asp-for="AuthorityLink" rows="3" class="md-textarea form-control" placeholder="Please type Authority Link" style="font-size: 13px;"></textarea>
                                                    <label asp-for="AuthorityLink" class="control-label font-weight-bold" style="font-size: 18px;"><span style="color:red;">*</span> Authority Link</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <br />

                                    <div class="row">
                                        <div class="col-md-12 text-left">
                                            <div class="form-group">
                                                <input type="submit" value="Edit" class="btn btn-outline-dark dusty-grass-gradient waves-effect font-weight-bold" style="font-size: 12px;" />
                                                <a asp-action="Index" class="btn btn-outline-dark cloudy-knoxville-gradient waves-effect font-weight-bold" style="font-size: 12px;">Back</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model BLMS.Models.Admin.BusinessUnit

@{
    ViewData["Title"] = "Create Business Unit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="mt-md-4 pt-md-2 mb-5 pb-5">
    <!-- Grid row -->
    <div class="row">

        <!-- Grid column -->
        <div class="col-md-12">
            <div class="card card-cascade cascading-admin-card user-card">
                <!-- Card Data -->
                <div class="admin-up d-flex justify-content-start">
                    <i class="fas fa fa-building info-color py-4 mr-3 z-depth-2"></i>
                    <div class="data">
                        <h5 class="font-weight-bold dark-grey-text">
                            Create Business Unit
                        </h5>
                    </div>
                </div>
                <!-- Card Data -->
                <!-- Card content -->
                <div class="card-body card-body-cascade">
                    <!-- Grid row -->
                    <div class="row">
                        <div class="col-lg-12">
                            <form asp-action="Create" autocomplete="off">
                                <div id="alert" class="form-group">
                                    @Html.Raw(@ViewBag.Alert)
                                </div>

                                <!-- Grid column -->
                                <div class="col-md-12 mb-4">
                                    <div class="form-group">
                                        <div class="md-form">
                                            <select asp-for="DivID"
                                                    class="mdb-select md-form colorful-select dropdown-primary"
                                                    asp-items="@(new SelectList(@ViewBag.ListofBusinessDiv,"DivID", "DivName"))">
                                            </select>
                                            <label asp-for="DivName" class="mdb-main-label" for="RoleID"><span style="color:red;">*</span> Business Division</label>
                                            <span asp-validation-for="DivName" class="text-danger text-sm"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="md-form">
                                            <input asp-for="UnitName" onkeyup="this.value=this.value.toUpperCase()" class="form-control" placeholder="Type New Business Unit">
                                            <label asp-for="UnitName" class="control-label"><span style="color:red;">*</span> Business Unit</label>
                                            <span asp-validation-for="UnitName" class="text-danger text-sm"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="md-form">
                                            <input asp-for="HoCName" onkeyup="this.value=this.value.toUpperCase()" class="form-control" placeholder="Type New Head of Company Name">
                                            <label asp-for="HoCName" class="control-label"><span style="color:red;">*</span> Head of Company</label>
                                            <span asp-validation-for="HoCName" class="text-danger text-sm"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-outline-primary waves-effect" />
                                        <a asp-action="Index" class="btn btn-outline-success waves-effect">Back</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.mdb-select').materialSelect();
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

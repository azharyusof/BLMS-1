@model BLMS.Models.Admin.UserRole

@{
    ViewData["Title"] = "Edit User Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-5 mt-md-0 mb-0">
    <div class="row" style="margin-top: -100px;">
        <div class="col-md-12 px-lg-5">
            <div class="card pb-5 mx-md-3">
                <div class="card-body">
                    <div class="container text-center my-5">
                        <h2 class="title font-weight-bold my-3 wow fadeIn" data-wow-delay="0.2s">
                            <strong>EDIT USER ROLE</strong>
                        </h2>

                        <p class="grey-text w-responsive mx-auto mb-3 wow fadeIn" data-wow-delay="0.2s">
                            Notes: Please fill the field to register new User Role.
                        </p>

                        <div class="row">
                            <div class="col-lg-12 wow fadeIn" data-wow-delay="0.2s">
                                <form asp-action="Edit" autocomplete="off">
                                    <div class="row">
                                        <div class="col-md-12 text-left">
                                            <div id="alert" class="form-group" style="font-size: 14px;">
                                                @Html.Raw(@ViewBag.Alert)
                                            </div>
                                        </div>
                                    </div>

                                    <input type="hidden" asp-for="UserRoleID" />
                                    <input type="hidden" asp-for="OldUserRoleStaffNo" />
                                    <input type="hidden" asp-for="OldRoleID" />
                                    <input type="hidden" asp-for="OldUserTypeID" />

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="md-form form-sm">
                                                    <select asp-for="UserRoleStaffNo"
                                                            class="mdb-select md-form colorful-select dropdown-primary"
                                                            asp-items="@(new SelectList(@ViewBag.ListofStaffName,"UserRoleStaffNo", "UserRoleName"))"
                                                            searchable="Search here"
                                                            size="4">
                                                    </select>
                                                    <label asp-for="UserRoleName" class="mdb-main-label text-left text-muted font-weight-bold" for="RoleID" style="font-size: 14px;"><span style="color:red;">*</span> Staff Name</label>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="md-form form-sm">
                                                    <select asp-for="RoleID"
                                                            class="mdb-select md-form colorful-select dropdown-primary"
                                                            asp-items="@(new SelectList(@ViewBag.ListofRole,"RoleID", "Role"))"
                                                            searchable="Search here"
                                                            size="4">
                                                    </select>
                                                    <label asp-for="Role" class="mdb-main-label text-left text-muted font-weight-bold" for="RoleID" style="font-size: 14px;"><span style="color:red;">*</span> Role</label>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="md-form form-sm">
                                                    <select asp-for="UserTypeID"
                                                            class="mdb-select md-form colorful-select dropdown-primary"
                                                            asp-items="@(new SelectList(@ViewBag.ListofUserType,"UserTypeID", "UserType"))"
                                                            searchable="Search here"
                                                            size="4">
                                                    </select>
                                                    <label asp-for="UserType" class="mdb-main-label text-left text-muted font-weight-bold" for="RoleID" style="font-size: 14px;"><span style="color:red;">*</span> User Type</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <br />

                                    <div class="row">
                                        <div class="col-md-12 text-left">
                                            <div class="form-group">
                                                <input type="submit" value="Edit" class="btn btn-outline-dark dusty-grass-gradient waves-effect font-weight-bold" style="font-size: 12px;" />
                                                <a asp-action="Index" class="btn btn-outline-dark cloudy-knoxville-gradient waves-effect font-weight-bold" style="font-size: 12px;">Back</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section CSS{
    <style>
        .select-wrapper input.select-dropdown {
            font-size: 13px;
        }

        .dropdown-content li > span {
            font-size: 12px;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.mdb-select').materialSelect();
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

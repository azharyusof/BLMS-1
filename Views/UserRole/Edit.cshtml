@model BLMS.Models.Admin.UserRole

@{
    ViewData["Title"] = "Edit User Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="mt-md-4 pt-md-2 mb-5 pb-5">
    <!-- Grid row -->
    <div class="row">

        <!-- Grid column -->
        <div class="col-md-12">
            <div class="card card-cascade cascading-admin-card user-card">
                <!-- Card Data -->
                <div class="admin-up d-flex justify-content-start">
                    <i class="fas fa fa-user-alt info-color py-4 mr-3 z-depth-2"></i>
                    <div class="data">
                        <h5 class="font-weight-bold dark-grey-text">
                            Edit User Role
                        </h5>
                    </div>
                </div>
                <!-- Card Data -->
                <!-- Card content -->
                <div class="card-body card-body-cascade">
                    <!-- Grid row -->
                    <div class="row">
                        <div class="col-lg-12">
                            <form asp-action="Edit" autocomplete="off">
                                <div class="row">
                                    <!-- Grid column -->
                                    <div class="col-md-12">
                                        <div id="alert" class="form-group">
                                            @Html.Raw(@ViewBag.Alert)
                                        </div>
                                    </div>
                                    <!-- Grid column -->
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0" hidden>
                                            <input asp-for="UserRoleID" onkeyup="this.value=this.value.toUpperCase()" class="form-control">
                                            <label asp-for="UserRoleID" class="control-label"><span style="color:red;">*</span> User Role ID</label>
                                            <span asp-validation-for="UserRoleID" class="text-danger text-sm"></span>
                                        </div>

                                        <div class="md-form form-sm mb-0" hidden>
                                            <input asp-for="OldUserRoleStaffNo" onkeyup="this.value=this.value.toUpperCase()" class="form-control">
                                            <label asp-for="OldUserRoleStaffNo" class="control-label"><span style="color:red;">*</span> Old Staff No</label>
                                            <span asp-validation-for="OldUserRoleStaffNo" class="text-danger text-sm"></span>
                                        </div>

                                        <div class="md-form form-sm mb-0" hidden>
                                            <input asp-for="OldRoleID" onkeyup="this.value=this.value.toUpperCase()" class="form-control">
                                            <label asp-for="OldRoleID" class="control-label"><span style="color:red;">*</span> Old Role</label>
                                            <span asp-validation-for="OldRoleID" class="text-danger text-sm"></span>
                                        </div>

                                        <div class="md-form form-sm mb-0" hidden>
                                            <input asp-for="OldUserTypeID" onkeyup="this.value=this.value.toUpperCase()" class="form-control">
                                            <label asp-for="OldUserTypeID" class="control-label"><span style="color:red;">*</span> Old User Type</label>
                                            <span asp-validation-for="OldUserTypeID" class="text-danger text-sm"></span>
                                        </div>

                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="UserRoleName" onkeyup="this.value=this.value.toUpperCase()" class="form-control" onkeydown="return false">
                                            <label asp-for="UserRoleName" class="control-label"><span style="color:red;">*</span> Staff Name</label>
                                            <span asp-validation-for="UserRoleName" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <select asp-for="RoleID"
                                                    class="mdb-select md-form colorful-select dropdown-primary"
                                                    asp-items="@(new SelectList(@ViewBag.ListofRole,"RoleID", "Role"))">
                                            </select>
                                            <label asp-for="Role" class="mdb-main-label" for="RoleID"><span style="color:red;">*</span> Role</label>
                                            <span asp-validation-for="Role" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <select asp-for="UserTypeID"
                                                    class="mdb-select md-form colorful-select dropdown-primary"
                                                    asp-items="@(new SelectList(@ViewBag.ListofUserType,"UserTypeID", "UserType"))">
                                            </select>
                                            <label asp-for="UserType" class="mdb-main-label" for="RoleID"><span style="color:red;">*</span> User Type</label>
                                            <span asp-validation-for="UserType" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <input type="submit" value="Edit" class="btn btn-outline-primary waves-effect" />
                                            <a asp-action="Index" class="btn btn-outline-success waves-effect">Back</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.mdb-select').materialSelect();
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

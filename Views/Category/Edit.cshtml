@model BLMS.Models.Admin.Category

@{
    ViewData["Title"] = "Edit License Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="mt-md-4 pt-md-2 mb-5 pb-5">
    <!-- Grid row -->
    <div class="row">

        <!-- Grid column -->
        <div class="col-md-12">
            <div class="card card-cascade cascading-admin-card user-card">
                <!-- Card Data -->
                <div class="admin-up d-flex justify-content-start">
                    <i class="fas fa fa-id-card info-color py-4 mr-3 z-depth-2"></i>
                    <div class="data">
                        <h5 class="font-weight-bold dark-grey-text">
                            Edit License type
                        </h5>
                    </div>
                </div>
                <!-- Card Data -->
                <!-- Card content -->
                <div class="card-body card-body-cascade">
                    <!-- Grid row -->
                    <div class="row">
                        <div class="col-lg-12">
                            <form asp-action="Edit" autocomplete="off">
                                <div class="row">
                                    <!-- Grid column -->
                                    <div class="col-md-12">
                                        <div id="alert" class="form-group">
                                            @Html.Raw(@ViewBag.Alert)
                                        </div>
                                    </div>
                                    <!-- Grid column -->
                                </div>

                                <div class="row">
                                    <div class="col-md-12" hidden>
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="CategoryID" onkeyup="this.value=this.value.toUpperCase()" class="form-control" placeholder="Type New License Type">
                                            <label asp-for="CategoryID" class="control-label"><span style="color:red;">*</span> License Type</label>
                                            <span asp-validation-for="CategoryID" class="text-danger text-sm"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12" hidden>
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="OldCategoryName" onkeyup="this.value=this.value.toUpperCase()" class="form-control" placeholder="Type New License Type">
                                            <label asp-for="OldCategoryName" class="control-label"><span style="color:red;">*</span> License Type</label>
                                            <span asp-validation-for="OldCategoryName" class="text-danger text-sm"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12" hidden>
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="OldDesc" onkeyup="this.value=this.value.toUpperCase()" class="form-control" placeholder="Type New License Type">
                                            <label asp-for="OldDesc" class="control-label"><span style="color:red;">*</span> License Type</label>
                                            <span asp-validation-for="OldDesc" class="text-danger text-sm"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <input asp-for="CategoryName" onkeyup="this.value=this.value.toUpperCase()" class="form-control" placeholder="Type New License Type">
                                            <label asp-for="CategoryName" class="control-label"><span style="color:red;">*</span> License Type</label>
                                            <span asp-validation-for="CategoryName" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="md-form form-sm mb-0">
                                            <textarea asp-for="Description" rows="5" onkeyup="this.value=this.value.toUpperCase()" class="md-textarea form-control" placeholder="Type License Description"></textarea>
                                            <label asp-for="Description" class="control-label"><span style="color:red;">*</span> Description</label>
                                            <span asp-validation-for="Description" class="text-danger text-sm"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input type="submit" value="Edit" class="btn btn-outline-primary waves-effect" />
                                            <a asp-action="Index" class="btn btn-outline-success waves-effect">Back</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model BLMS.Models.Admin.Category

@{
    ViewData["Title"] = "License Type";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-5 mt-md-0 mb-0">
    <div class="row" style="margin-top: -100px;">
        <div class="col-md-12 px-lg-5">
            <div class="card pb-5 mx-md-3">
                <div class="card-body">
                    <div class="container text-center my-5">
                        <h2 class="title font-weight-bold my-3 wow fadeIn" data-wow-delay="0.2s">
                            <strong>CREATE LICENSE TYPE</strong>
                        </h2>

                        <p class="grey-text w-responsive mx-auto mb-3 wow fadeIn" data-wow-delay="0.2s">
                            Notes: Please fill the field to register new License Type.
                        </p>

                        <div class="row">
                            <div class="col-lg-12 wow fadeIn" data-wow-delay="0.2s">
                                <form asp-action="Create" autocomplete="off">
                                    <div class="row">
                                        <div class="col-md-12 text-left">
                                            <div id="alert" class="form-group" style="font-size: 14px;">
                                                @Html.Raw(@ViewBag.Alert)
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="md-form form-sm">
                                                    <input asp-for="CategoryName" class="form-control" placeholder="Please type License Type" style="font-size: 13px;">
                                                    <label asp-for="CategoryName" class="control-label font-weight-bold" style="font-size: 18px;"><span style="color:red;">*</span> License Type</label>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="md-form form-sm">
                                                    <textarea asp-for="Description" rows="3" class="md-textarea form-control" placeholder="Please type License Description" style="font-size: 13px;"></textarea>
                                                    <label asp-for="Description" class="control-label font-weight-bold" style="font-size: 18px;"><span style="color:red;">*</span> Description</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <br />

                                    <div class="row">
                                        <div class="col-md-12 text-left">
                                            <div class="form-group">
                                                <input type="submit" value="Create" class="btn btn-outline-dark dusty-grass-gradient waves-effect font-weight-bold" style="font-size: 12px;" />
                                                <a asp-action="Index" class="btn btn-outline-dark cloudy-knoxville-gradient waves-effect font-weight-bold" style="font-size: 12px;">Back</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
